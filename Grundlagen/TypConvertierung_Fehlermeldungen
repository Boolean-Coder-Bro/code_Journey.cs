namespace TypConvertierung
{
    internal class Program
    {
        static void Main(string[] args)
        {
            // Variablen
            int alter;
            bool check; 
            //Eingabe       
            do
            {
                // Wird mindestend EINMAL ausgef체hrt und solange bis check Bedingung nicht false ist da wir bool check; geschrieben haben ist check== false  dann True ^^
                Console.WriteLine("Bitte geben sie Ihr Alter ein: ");
                check=int.TryParse(Console.ReadLine(), out alter);
                // Falls Fehleingabe dann 
                if (check== false) 
                {
                    Console.WriteLine("Dow-Error sie m체ssen eine Zahl eingeben!");
                }
            }
            while (check == false);
            // Ausgabe
            Console.WriteLine($"Sie sind {alter} Jahre alt.");
        }/* Erkl채rung
          * Wenn der Anwender mist eingegeben hat kann man Ihn auffordern das richtige einzugeben deshalb schreiben wir diese Code Zeile als do while schleife !
          * int.TryParse(Console.ReadLine(), out alter);
          * Falls vom USer ein falscher Wert eingegeben wurde dann wird der default wert von int alter ausgegeben f체r ein int ist dies immer die 0
          */


    }
}
